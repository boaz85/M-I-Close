<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    android:gravity="center_horizontal" >

    <AutoCompleteTextView
        android:id="@+id/targetAddressEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/targetDistanceSeekBar"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/shape_textfield_rectangle"
        android:ems="10"
        android:hint="@string/your_target_address"
        android:imeOptions="actionGo"
        android:inputType="textPostalAddress"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:popupBackground="#d3a4c4"
        android:textColor="@color/grey"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/setAlarmTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/targetAddressEditText"
        android:layout_alignLeft="@+id/targetAddressEditText"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="7dp"
        android:text="@string/how_far_from_target"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/yellow" />

    <TextView
        android:id="@+id/goTextView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignRight="@+id/targetDistanceSeekBar"
        android:layout_alignTop="@+id/targetAddressEditText"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_circle_blue"
        android:gravity="center"
        android:text="@string/go"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/yellow"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/metersNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setAlarmTextView"
        android:layout_below="@+id/targetDistanceSeekBar"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/turquoise" />

    <TextView
        android:id="@+id/metersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/metersNumberTextView"
        android:layout_alignBottom="@+id/metersNumberTextView"
        android:text="@string/kilometers"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/turquoise" />

    <SeekBar
        android:id="@+id/targetDistanceSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setAlarmTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="21dp"
        android:max="@integer/seekBar_max_value"
        android:maxHeight="6dip"
        android:minHeight="6dip"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:progress="50"
        android:progressDrawable="@drawable/seekbar_progress_bar"
        android:thumb="@drawable/shape_circle_dark_turquoise" />

</RelativeLayout>