<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MICloseAppTheme.SetTargetActivityTheme" >

    <AutoCompleteTextView
        android:id="@+id/targetAddressEditText"
        style="@style/MICloseAppTheme.EditText"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/targetDistanceSeekBar"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="40dp"
        android:lines="2"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="50sp" >

        <requestFocus />
    </AutoCompleteTextView>
    
    <TextView
        android:id="@+id/setAlarmTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/targetAddressEditText"
        android:layout_below="@+id/targetAddressEditText"
        android:layout_marginTop="140dp"
        android:text="@string/how_far_from_target"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:textSize="45sp" />

    <SeekBar
        android:id="@+id/targetDistanceSeekBar"
        style="@style/MICloseAppTheme.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/setAlarmTextView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:maxHeight="6dip"
        android:minHeight="6dip"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>
    
    <TextView
        android:id="@+id/metersNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/targetAddressEditText"
        android:layout_below="@+id/targetDistanceSeekBar"
        android:layout_marginTop="4dp"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:textSize="30sp" />
    
    <TextView
        android:id="@+id/metersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/metersTextView"
        android:layout_below="@+id/targetDistanceSeekBar"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:text="@string/kilometers"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:textSize="30sp" />
    
    <TextView
        android:id="@+id/goTextView"
        style="@style/MICloseAppTheme.BigButton.GoButton"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@+id/metersNumberTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="160sp" />

</RelativeLayout>
