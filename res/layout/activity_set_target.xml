<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    android:gravity="center_horizontal" >

    <AutoCompleteTextView
        android:id="@+id/targetAddressEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_textfield_rectangle"
        android:popupBackground="#d3a4c4"
        android:ems="10"
        android:hint="@string/your_target_address"
        android:inputType="textPostalAddress"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/grey"
        android:textSize="25sp" >
        <requestFocus />
    </AutoCompleteTextView>
    
    <TextView
        android:id="@+id/setAlarmTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/targetAddressEditText"
        android:layout_below="@+id/targetAddressEditText"
        android:layout_marginTop="40dp"
        android:text="@string/how_far_from_target"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/yellow" />

    <SeekBar
        android:id="@+id/targetDistanceSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/setAlarmTextView"
        android:layout_marginTop="10dp"
        android:maxHeight="6dip"
        android:minHeight="6dip"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:progress="50"
        android:progressDrawable="@drawable/seekbar_progress"
        android:thumb="@drawable/shape_circle_dark_turquoise"
        android:max="@integer/seekBar_max_value" />
    
    
    <TextView
        android:id="@+id/metersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/targetDistanceSeekBar"
        android:layout_marginTop="4dp"
        android:layout_alignRight="@+id/targetAddressEditText"
        android:text="@string/kilometers"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/turquoise" />
    
    
    <TextView
        android:id="@+id/metersNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/metersTextView"
        android:layout_alignBottom="@+id/metersTextView"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/metersTextView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/turquoise" />

    <TextView
        android:id="@+id/goTextView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/metersNumberTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_circle_blue"
        android:gravity="center"
        android:text="@string/go"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/yellow"
        android:textSize="60sp" />



</RelativeLayout>
